{
  "ConnectionStrings": {
    "ProductManagementConnection": "Server=host.docker.internal,1433;Database=ProductManagement;User Id=sa;Password=Q2w3e4r5t6y;TrustServerCertificate=true"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.File", "Serilog.Sinks.Console" ],
